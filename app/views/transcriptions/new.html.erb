<div class="max-w-2xl mx-auto p-6">
  <h1 class="text-2xl font-bold mb-4"> Record Your Voice</h1>

  <div data-controller="transcription">
    <div class="flex space-x-4 mb-4">
      <button data-transcription-target="startBtn" data-action="click->transcription#start"
              class="px-4 py-2 bg-green-600 text-white rounded">Start Listening</button>

      <button data-transcription-target="stopBtn" data-action="click->transcription#stop"
              class="px-4 py-2 bg-red-600 text-white rounded" disabled>Stop Listening</button>
    </div>

    <div class="border rounded p-4 bg-gray-100 min-h-[100px]" data-transcription-target="live">
      Live transcription will appear here...
    </div>

    <p class="mt-3 text-sm text-gray-600" data-transcription-target="status"></p>
  </div>
</div>
